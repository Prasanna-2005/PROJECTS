<body>
  <nav style="display: flex;">

    <div id=div-reg-title class="title">
      <h1>STUDENT REGISTRATION FORM </h1>
    </div>

    <div id=home-link-div class="pos1">
      <a href="/">
        <h3>HOME</h3>
      </a>
    </div>

    <div id=home-viewrecord-div class="pos2">
      <a href="/records">
        <h3>RECORDS</h3>
      </a>
    </div>

  </nav>
  <hr>


  <table id="tbl">
    <form id="form1">
      <tr>
        <td> NAME : </td>
        <td>
          <input type="text" name="Name" id="Name" placeholder="NAME" required maxlength="35" size="20"
            autocomplete="off" pattern="^(?=.*[a-zA-Z])[a-zA-Z\s.]+$" />

        </td>
      </tr>
      <!-- 
      onkeyup="return ! isNumber(event)"

      <tr>
        <td> ROLL NUMBER: </td>
        <td>
          <input type="text" name="Roll" placeholder="ROLL" maxlength="9" id="roll" pattern="^[0-9]{1,9}$"
            autocomplete="off" required onkeydown="return (isNumber(event) || event.keyCode===37||
            event.keyCode===39||event.keyCode===40||event.keyCode===8);" />
        </td>
      </tr>

      <tr>
        <td> CLASS: </td>
        <td>
          <select name="Class" id="class" required autocomplete="off">
            <option value="I">I</option>
            <option value="II">II</option>
            <option value="III">III</option>
            <option value="IV">IV</option>
            <option value="V">V</option>
            <option value="VI">VI</option>
            <option value="VII">VII</option>
            <option value="VIII">VIII</option>
            <option value="IX">IX</option>
            <option value="X">X</option>
            <option value="XI">XI</option>
            <option value="XII">XII</option>
          </select>
        </td>
      </tr>

      <tr>
        <td>SECTION:</td>
        <!-- allow only text-->
        <td>
          <input type="text" name="Section" placeholder="A" id="section" autocomplete="off" maxlength="1" size="1"
            onkeydown="if (isNumber(event)||event.keyCode===32){return false;}" onkeyup="convertCaps(event);">
        </td>
      </tr>


      <tr>
        <td> </td>
        <td>
          <button id="SUBMIT" title="SUBMIT">SUBMIT</button>
          <button type="reset" value="Reset" id="reset">Reset</button>
          </div>
        </td>
      </tr>
  </table>
  </form>
  <div id="response"></div>
  <p id="para"></p>


